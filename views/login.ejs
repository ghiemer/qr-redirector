            <rect x="36" y="48" width="8" height="8" fill="white"/>
            <rect x="24" y="48" width="8" height="8" fill="white"/>
            <rect x="12" y="48" width="8" height="8" fill="white"/>
            <rect x="28" y="28" width="8" height="8" fill="white"/>
